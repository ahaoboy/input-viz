{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "input-viz",
  "version": "0.1.0",
  "identifier": "com.input-viz.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "input-viz",
        "width": 0,
        "height": 0,
        "visible": true,
        "fullscreen": false,
        "closable": true,
        "resizable": true,
        "minimizable": true,
        "decorations": false,
        "maximizable": true,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "compression": "none"
      }
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVCQzVCOEVEQTMyODlGMDYKUldRR255aWo3YmpGV3k1M1J6VXE4WGlXSEs2UStIMWJJQ3FLdDFZL1hGQU1ha2s3bkxVMExTeWsK",
      "endpoints": [
        "https://github.com/ahaoboy/input-viz/releases/latest/download/latest.json"
      ]
    }
  }
}
